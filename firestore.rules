rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isAdmin() {
      return exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    // Rules for 'users' collection
    match /users/{userId} {
      allow create: if isSignedIn();
      allow get: if isSignedIn();
      allow update, delete: if isSignedIn() && (isOwner(userId) || isAdmin());
      allow list: if isSignedIn();
      
      // Rules for 'attendance' sub-collection
      match /attendance/{attendanceId} {
        allow read, create: if isSignedIn() && isOwner(userId);
        allow update, delete, list: if isSignedIn() && isAdmin();
      }
    }

    // Rules for 'congressEvents' collection
    match /congressEvents/{congressEventId} {
      allow read: if isSignedIn();
      allow create, update, delete: if isSignedIn() && isAdmin();
    }
    
    // Rules for 'roles_admin' collection
    match /roles_admin/{uid} {
    	allow read: if isSignedIn() && isAdmin();
    }

    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
