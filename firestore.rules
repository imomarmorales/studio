rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isAdmin() {
      // For now, we don't have a concept of admin roles in the DB
      // The special 'admin' user is handled client-side.
      return false;
    }

    // Rules for 'users' collection
    match /users/{userId} {
      allow create: if isSignedIn() && isOwner(userId);
      allow get: if isSignedIn();
      allow list: if isSignedIn(); // Allow any signed-in user to list all users
      allow update, delete: if isSignedIn() && (isOwner(userId) || isAdmin());
    }

    // Default deny all other collections/paths
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
