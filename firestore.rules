rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isAdmin() {
      // Temporarily simplified - check if email is admin email
      // This allows immediate access without requiring user document lookup
      return request.auth.token.email == 'admin@congreso.mx' || 
             (exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
              get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
    }

    // Rules for 'users' collection
    match /users/{userId} {
      allow create: if isSignedIn(); // Allow any signed-in user to create their own profile
      allow get: if isSignedIn(); // Allow any signed-in user to read any profile
      allow list: if isSignedIn(); // Temporarily allow all signed-in users to list (for testing)
      allow update: if isSignedIn() && (isOwner(userId) || isAdmin());
      allow delete: if isSignedIn() && isAdmin();
    }
    
    // Rules for 'events' collection
    match /events/{eventId} {
      allow read: if isSignedIn(); // Any signed-in user can see the events
      allow list: if isSignedIn(); // Any signed-in user can list events (simplified)
      allow create, update, delete: if isSignedIn() && isAdmin(); // Only admins can manage events
    }

    // Rules for 'attendance' subcollection
    match /users/{userId}/attendance/{attendanceId} {
      allow read: if isSignedIn() && (isOwner(userId) || isAdmin());
      allow list: if isSignedIn() && (isOwner(userId) || isAdmin());
      // A user can only create an attendance record for themselves
      allow create: if isSignedIn() && isOwner(userId);
    }


    // Default deny all other collections/paths
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
